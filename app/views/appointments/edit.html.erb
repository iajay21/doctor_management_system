<%= form_for @appointment, html: { multipart: true, autocomplete: "off" } do |f| %>
	<%= f.hidden_field :patient_id, value: @appointment.patient_id %>

  <div class="form-group">
    <%= f.label :doctor %>
    <%= f.select :doctor_id, @doctors.map{|d| [d.name, d.id]}, {prompt: 'Please select Doctor' }, class: 'form-control', require: true %>
  </div>

  <div class="form-group">
    <%= f.label :appointment_time %>
    <%= f.text_field :appointment_time, class: 'form-control', id: "appointment_time" %>
  </div>

  <div class="form-group">
    <%= f.label :note %>
    <%= f.text_area :note, class: 'form-control' %>
  </div>

  <%= f.button :submit, class: "btn btn-primary" %>
  <%= link_to "Cancel", root_path, class: "btn btn-danger" %>
<% end %>

<script type="text/javascript">
  $('#appointment_time').datetimepicker();
</script>